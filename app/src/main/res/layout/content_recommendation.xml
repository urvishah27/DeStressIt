                                android:textSize="15sp"
                                android:textStyle="normal"
                                android:textColor="#fff"/>

                            <TextView
                                android:id="@+id/tv13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
