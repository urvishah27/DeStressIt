<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="75dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25dp"
        android:fontWeight="50"
        android:text="YOUR STRESS RESULT" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:fontWeight="50"
        android:text="YOUR STRESS LEVEL IS "
        android:layout_below="@id/textView1"
        android:textAlignment="center"
        android:textSize="18dp" />

    <Button
        android:id="@+id/recommendButton"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/stressPercent"
        android:layout_centerInParent="true"
        android:background="@drawable/background"
        android:clickable="true"
        android:onClick="getRecomm"
        android:visibility="gone"
        android:text="Get Recommendations"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/recommendButton"
        android:background="@drawable/background"
        android:clickable="true"
        android:onClick="backDash"
        android:text="Go Back to Dashboard"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:max="100"
        android:progress="25"
        android:progressBackgroundTint="#F5F7EDED"
        android:progressTint="#00BCD4" />

    <TextView
        android:id="@+id/stressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/progressBar"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20dp"
        android:fontWeight="50"
        android:layout_centerHorizontal="true"
        android:text="0 %" />


</RelativeLayout>